@page
@model _7024Movies.Pages.SoccerMoviesModel
@{
    var results = (_7024Movies.Result[])ViewData["SoccerResults"];
    var beckhams = (_7024Movies.Result[])ViewData["BeckhamResults"];
    var players = (QuickType.PlayerInfo[])ViewData["PlayerInfo"];
}

<body>
    <div class="row padbottom">
        <h1 class="center">Soccer Movie Options</h1>
    </div>
    <div class="row padbottom">
        @{
            foreach (_7024Movies.Result result in results.Take(20))
            {
                <div class="card text-center" style="width: 15rem;">
                    <div class="card-body">
                        <h3 class="card-title">@result.Title</h3>
                        <p class="card-text">@result.ReleaseDate</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Popularity Score: @result.Popularity</li>
                        <li class="list-group-item">Vote Average: @result.VoteAverage</li>
                    </ul>
                </div>
            }
        }
    </div>
    <div class="row padbottom">
        <h1 class="center">David Beckham Movies</h1>
    </div>
    <div class="row padbottom">
        @{
            foreach (_7024Movies.Result beckham in beckhams)
            {
                <div class="card text-center" style="width: 15rem;">
                    <div class="card-body">
                        <h3 class="card-title">@beckham.Title</h3>
                        <p class="card-text">@beckham.ReleaseDate</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Popularity Score: @beckham.Popularity</li>
                        <li class="list-group-item">Vote Average: @beckham.VoteAverage</li>
                    </ul>
                </div>
            }
        }
    </div>
    <div class="row padbottom text-center">
        <h1 class="center">English Soccer Player Information</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Player Name</th>
                    <th>Team Name</th>
                    <th>Team Area</th>
                    <th>Start Date</th>
                </tr>
            </thead>
            <tbody>
                @{
                    foreach (QuickType.PlayerInfo player in players)
                    {
                        <tr>
                            <td>@player.PlayerName</td>
                            <td>@player.TeamName</td>
                            <td>@player.TeamArea</td>
                            <td>@player.StartDate</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</body>


